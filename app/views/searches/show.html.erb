<h1> Search results </h1>

<p> <%= link_to "Back", new_search_path %> </p>

<% if @search.search_artists.empty? %>

<p>No record found </p>

<% else %>

  <% @search.search_artists.each do |artist| %>

    <div class="results">
    <h2><%= link_to artist.name, artist_path(artist.id) %></h2>

    </div>
  <% end %>
<% end %>
